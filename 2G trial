<body>
    <h1>たからのありかを探せ！</h1>
    <button id="changeTextButton">Push</button>
    <div id="output">< Hint ></Hint></div>

    <script>
        // パスワードのプロンプト
        const password = 'Miyakana'; // パスワードを設定
        let enteredPassword = prompt('パスワードを入力してください:');
        
        // パスワードが一致しない場合、ページを閉じる
        if (enteredPassword !== password) {
            alert('パスワードが間違っています。');
            window.location.href = 'about:blank'; // ページを閉じる（空のページを表示）
        }

        const button = document.getElementById('changeTextButton');
        const output = document.getElementById('output');
        const texts = ['た', 'か', 'ら', 'の', 'あ', 'り', 'か', 'は', '2', 'G'];
        let currentIndex = 0;

        button.addEventListener('click', () => {
            if (currentIndex < texts.length) {
                output.textContent = texts[currentIndex];
                currentIndex++;
            } else {
                output.textContent = '2Gに向かえ！';
            }
        });
    </script>
</body>
